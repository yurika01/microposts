<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <% if @user.avatar? %> 
                    <%= image_tag(@user.avatar.url, alt: @user.name, class: "gravatar") %>
                <% else %>
                    <%= gravatar_for @user %>
                <% end %>
                <%= @user.name %>
            </h1>
            <div>
                (<%= link_to "編集ページへのリンク" , edit_user_path(@user) %>)
                (<%= link_to "フォロワーへのリンク" , followers_user_path(@user) %>)
                (<%= link_to "フォローへのリンク" , followings_user_path(@user) %>)
            </div>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
            <%=render @microposts %>
        </ol>
     <% end %>
    </div>
</div>
